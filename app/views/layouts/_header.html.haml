%header.general_header
  .header__inner.clearfix
    .header__inner__logo_container
      =link_to root_path, class: "logo" do
        =image_tag "logos/copicari.png", class: "header__inner__logo"
    = form_tag "/items/search", method: "GET", class: "header__inner__form" do
      %input.header__inner__form__text_field{name:"keyword", placeholder:"商品検索", type:"text"}
      %button.header__inner__form__btn{type:"submit"}
        %i.fa.fa-search
    .header__inner__links.clearfix
      %ul.header__inner__links__left
        %ul#menu
          %li
            カテゴリー
            %ul.child
              %li
                %a{:href => "#"} レディース
              %li
                %a{:href => "#"} メンズ
              %li
                %a{:href => "#"} ベビー・キッズ
              %li
                %a{:href => "#"} インテリア・住まい・小物
              %li
                %a{:href => "#"} エンタメ・ホビー
              %li
                %a{:href => "#"} コスメ・香水・美容
              %li
                %a{:href => "#"} 家電・スマホ・カメラ
              %li
                %a{:href => "#"} スポーツ・レンジャー
              %li
                %a{:href => "#"} ハンドメイド
              %li
                %a{:href => "#"} チケット
              %li
                %a{:href => "#"} 自転車・オートバイ
              %li
                %a{:href => "#"} その他

      %ul.header__inner__links__right
        - if user_signed_in?
          = link_to "マイページ", my_pages_path, class: "header__inner__links__item--blue"
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__inner__links__item--red"
        -else
          = link_to "ログイン", new_user_session_path, class: "header__inner__links__item--red"
          = link_to "新規会員登録", new_user_registration_path, class: "header__inner__links__item--blue"
